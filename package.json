{
  "name": "minerva-ui",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Cratebind",
  "description": "Composable, Simple React Base Components",
  "repository": "git://github.com/cratebind/minerva-ui.git",
  "main": "dist/index.js",
  "module": "dist/minerva-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "checkbox.css"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "tsdx lint",
    "release": "np",
    "storybook": "start-storybook -p 6006 --docs",
    "build-storybook": "build-storybook --docs",
    "sb": "yarn storybook",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@storybook/addon-actions": "^5.3.10",
    "@storybook/addon-docs": "^5.3.10",
    "@storybook/addon-links": "^5.3.10",
    "@storybook/addons": "^5.3.10",
    "@storybook/preset-typescript": "^1.1.0",
    "@storybook/react": "^5.3.10",
    "@types/jest": "^25.1.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "babel-loader": "^8.0.6",
    "cz-conventional-changelog": "3.1.0",
    "cz-customizable": "^6.2.0",
    "husky": "^3.0.9",
    "jest-styled-components": "^7.0.0",
    "np": "^5.1.2",
    "prism-react-renderer": "^1.0.2",
    "react": "^16.11.0",
    "react-docgen-typescript-loader": "^3.3.0",
    "react-dom": "^16.11.0",
    "react-live": "^2.2.1",
    "semantic-release": "^17.0.2",
    "ts-loader": "^6.2.1",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@mdx-js/react": "^1.5.1",
    "@reach/checkbox": "^0.8.1",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/styled-components": "^4.4.2",
    "@types/styled-system": "^5.1.6",
    "styled-components": "^5.0.0",
    "styled-system": "^5.1.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/CodeBlock.*",
      "(.d.ts)$"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
