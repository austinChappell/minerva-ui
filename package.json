    "react-live": "^2.2.1",
    "ts-loader": "^6.2.1",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@mdx-js/react": "^1.5.1",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/styled-components": "^4.4.2",
    "styled-components": "^5.0.0",
    "styled-system": "^5.1.4"
