{
  "name": "minerva-ui",
  "version": "0.1.9",
  "license": "MIT",
  "author": "Cratebind",
  "description": "Composable, Simple React Base Components",
  "repository": "git://github.com/cratebind/minerva-ui.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "dist/index.js",
  "module": "dist/minerva-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "checkbox.css"
  ],
  "scripts": {
    "start": "tsdx watch",
